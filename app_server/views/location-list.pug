extends layout
include _includes/sharedHTMLfunctions
block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
          small &nbsp; #{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-2
    each location in locations
      .row.list-group.border.border-primary.rounded
        .col-xs-12.list-group-item
          h4
          a(href='/location') #{location.name} &nbsp;
          +outputRating(location.rating)
          span.badge.text-bg-secondary.rounded-pill.float-end #{location.distance}
        p.address #{location.address}
        p
          each facility in location.facilities
            span.badge.text-bg-info #{facility}
            | &nbsp;

    .col-xs-12.col-sm-4
      p.lead= sidebar