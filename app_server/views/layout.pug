doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
    //link(rel='stylesheet', href='/bootstrap/css/NewAge.bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      .container-fluid
        a.navbar-brand(href='#') GettingMEAN
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-md-0
            li.nav-item
              a.nav-link.active(aria-current='page', href='/') Home
            li.nav-item
              a.nav-link(href='/location/') Location
            li.nav-item
              a.nav-link(href='/location/review/new/') Add Review
            li.nav-item
              a.nav-link(href='/about/') About
            li.nav-item
              a.nav-link.disabled(aria-disabled='true') Disabled
          form.d-flex(role='search')
            input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success(type='submit') Search

    .container
      block content

      footer
        .row
          .col-xs-12
            small &copy; Чернышев Егор 2024
